<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Tambahkan Produk Baru"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="26sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/menu1"
            android:layout_width="101dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/gbr1" />

        <ImageView
            android:id="@+id/menu2"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr2" />

        <ImageView
            android:id="@+id/menu3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr3" />

        <ImageView
            android:id="@+id/menu4"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr4" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/menu5"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr5" />


        <ImageView
            android:id="@+id/menu6"
            android:layout_width="101dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/gbr6" />

        <ImageView
            android:id="@+id/menu7"
            android:layout_width="90dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/gbr7" />

        <ImageView
            android:id="@+id/menu8"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/gbr8" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/menu9"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr9" />

        <ImageView
            android:id="@+id/menu10"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr10" />

        <ImageView
            android:id="@+id/menu11"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gbr11" />

        <ImageView
            android:id="@+id/menu12"
            android:layout_width="73dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/gbr12" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:text="Periksa Pesanan Baru"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/dekhajabena"
        android:textSize="20dp" />
</RelativeLayout>